# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/rentify
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/rentify

# Redis
REDIS_URL=redis://localhost:6379/0

# Auth
JWT_SECRET=local-dev-secret-replace-in-prod
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_EXPIRY_DAYS=30
PASSWORD_HASH_ALGORITHM=argon2

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Stripe
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder
STRIPE_PRICE_ID=price_placeholder
MOCK_STRIPE=true

# SendGrid
SENDGRID_API_KEY=SG.placeholder
SENDGRID_FROM_EMAIL=noreply@rentify.eu
MOCK_EMAIL=true

# Telegram
TELEGRAM_BOT_TOKEN=placeholder
MOCK_TELEGRAM=true

# Observability
SENTRY_DSN=
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature flags (defaults, overridden by DB)
ENABLE_PAID_GATE=false
ENABLE_SCRAPING=false

# Scraper settings
SCRAPER_SOURCES=funda,pararius,kamernet,huurwoningen,housinganywhere,directbijeigenaar
SCRAPER_CITIES=amsterdam,rotterdam,utrecht,den-haag,eindhoven,groningen
SCRAPER_INTERVAL_SECONDS=3600
SCRAPER_MAX_PAGES_PER_CITY=5
ENABLE_LIVE_SCRAPING=false
SCRAPER_MIN_DELAY=2.0
SCRAPER_MAX_DELAY=5.0
PROXY_POOL_URL=
PROXY_LIST=

# SonarCloud (CI only)
SONAR_TOKEN=
SONAR_ORGANIZATION=
SONAR_PROJECT_KEY=
